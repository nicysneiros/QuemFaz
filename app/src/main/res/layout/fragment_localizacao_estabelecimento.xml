<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/activity_vertical_margin">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/explicacao_localizacao"
        android:textSize="@dimen/text_size_small"
        android:textColor="#808080"
        android:layout_marginBottom="@dimen/edit_text_marging"
        android:layout_marginTop="@dimen/edit_text_marging"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="@dimen/edit_text_marging"
        android:layout_marginTop="@dimen/edit_text_marging">

        <EditText
            android:id="@+id/pesquisar_endereco"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="@string/pesquisar_endereco"/>

        <ImageButton
            android:id="@+id/pesquisar_endereco_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_action_search"
            android:background="#0000"/>

        </LinearLayout>

    <fragment
        android:id="@+id/map"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        class="com.google.android.gms.maps.SupportMapFragment"/>


</LinearLayout>